{
  "name": "fastcommit",
  "displayName": "FastCommit",
  "description": "AI-powered commit message generator for VS Code",
  "version": "1.0.0",
  "publisher": "axorai",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "commit",
    "ai",
    "conventional-commits",
    "commit-message"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Axl47/FastCommit.git"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "fastcommit.generateMessage",
        "title": "Generate Commit Message",
        "category": "FastCommit",
        "icon": "$(git-commit)"
      },
      {
        "command": "fastcommit.configureApiKey",
        "title": "Configure API Key",
        "category": "FastCommit"
      },
      {
        "command": "fastcommit.configureObsidian",
        "title": "Configure Obsidian Integration",
        "category": "FastCommit"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "fastcommit.generateMessage",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "fastcommit.generateMessage",
          "when": "scmProvider == git"
        },
        {
          "command": "fastcommit.configureApiKey"
        },
        {
          "command": "fastcommit.configureObsidian"
        }
      ]
    },
    "configuration": {
      "title": "FastCommit",
      "properties": {
        "fastcommit.apiProvider": {
          "type": "string",
          "default": "openai",
          "enum": ["openai", "anthropic", "openrouter"],
          "enumDescriptions": [
            "OpenAI (GPT models)",
            "Anthropic (Claude models)",
            "OpenRouter (Multiple providers)"
          ],
          "description": "AI provider for commit message generation"
        },
        "fastcommit.model": {
          "type": "string",
          "default": "gpt-5-mini",
          "description": "Model to use for commit message generation"
        },
        "fastcommit.customTemplate": {
          "type": "string",
          "default": "",
          "description": "Custom commit message template (overrides default conventional commits format)"
        },
        "fastcommit.includeUnstaged": {
          "type": "boolean",
          "default": true,
          "description": "Include unstaged changes if no staged changes are found"
        },
        "fastcommit.excludeLockFiles": {
          "type": "boolean",
          "default": true,
          "description": "Exclude package manager lock files from commit message analysis"
        },
        "fastcommit.obsidian.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Obsidian integration to automatically log commit messages"
        },
        "fastcommit.obsidian.url": {
          "type": "string",
          "default": "",
          "description": "Base URL for Obsidian API (e.g., http://localhost:27123)"
        },
        "fastcommit.obsidian.vaultName": {
          "type": "string",
          "default": "",
          "description": "Name of the Obsidian vault"
        },
        "fastcommit.obsidian.filePath": {
          "type": "string",
          "default": "",
          "description": "Path to the file within the vault (e.g., Projects/commits.md)"
        },
        "fastcommit.obsidian.blockId": {
          "type": "string",
          "default": "",
          "description": "Block ID within the file to prepend commit messages"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "dependencies": {
    "ignore": "^5.2.4"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  }
}
